{
  "name": "database-security-project",
  "version": "1.0.0",
  "description": "Database security demo with Next.js and Express",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm run dev",
    "server": "cd server && nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "setup-db": "cd server && node setup-db.js",
    "dev-webpack": "NEXT_WEBPACK=1 next dev"
  },
  "keywords": [
    "security",
    "sql-injection",
    "xss",
    "nextjs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}